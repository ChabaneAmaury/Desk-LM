{
    "type": "object",
    "properties": {
        "mode": { "enum": ["evaluate", "predict", "measurify"] },
        "samples": { 
            "type": "array",
            "items": {
                "oneOf": [
                    { "type": "array" },
                    { "type": "number" }
                ]
            }
        },
        "n_preds": { "type": "number" },
        "feature": { "type": "string" },
        "items": { 
            "type": "array",
            "items": { "type": "string" }
        },
        "filter": { "type": "string" },
        "target": { "type": "string" },
        "webhook": { 
            "type": "object",
            "properties": {
                "url": { "type": "string" },
                "method": { "type": "string" },
                "headers": { "type": "object" },
                "data": { "type": "object" }
            },
            "required": ["url","method"],
            "additionalProperties": false
        }
    },
    "allOf": [
        {
            "if": {
                "properties": { "mode" : { "const": "evaluate" } }
            },
            "then": {
                "required": ["mode"]
            }
        },
        {
            "if": {
                "properties": { "mode" : { "const": "predict" } }
            },
            "then": {
                "required": ["mode", "samples"]
            }
        },
        {
            "if": {
                "properties": { "mode" : { "const": "measurify" } }
            },
            "then": {
                "required": ["mode", "feature", "items", "filter", "target"]
            }
        }
    ],
    "additionalProperties": false
}